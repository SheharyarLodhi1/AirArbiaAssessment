<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/textViewLayout"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/ivCircularImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:maxLines="3"
            android:text="Supportersfsdfssdfsdfsffsdfsdfdemocratic candidate Jon ossaf after his"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCircularImage"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/horizontalLayoutViews"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvAutherName"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:maxLines="3"
                android:text="By errefrfrfrfrffrfr"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_10sdp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCalender"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-06-06"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivCircularImage"
        android:layout_width="@dimen/_40ssp"
        android:layout_height="@dimen/_40ssp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewLayout"
        android:layout_marginBottom="@dimen/_20sdp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNextArrow"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewLayout"
        app:layout_constraintTop_toTopOf="@+id/textViewLayout"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLayout"
        android:layout_marginEnd="@dimen/_5sdp"
        android:src="@drawable/next"
        android:layout_marginBottom="@dimen/_20sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>